{
  "name": "raga-octi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "nodemon -r dotenv/config --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' src/index.ts",
    "debug": "nodemon -r dotenv/config --watch 'src/**/*.ts' --exec 'node --inspect=0.0.0.0:9229 -r ts-node/register -r tsconfig-paths/register' src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "compose:up": "podman-compose up -d",
    "compose:down": "podman-compose down"
  },
  "keywords": [
    "raga",
    "octi",
    "chromadb",
    "express",
    "typescript"
  ],
  "author": "Ahmet Atar",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.9",
    "@google/genai": "^1.30.0",
    "@langchain/textsplitters": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "chromadb": "^3.1.6",
    "compute-cosine-similarity": "^1.1.0",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "ollama": "^0.6.3",
    "pdf-parse": "^2.4.5",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.14",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
