{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@routes/*": ["src/routes/*"],
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"],
}
